{% extends 'base.html.twig' %}

{% block body %}

    <h3>{{ task.name }}</h3>

    <ul class="list-group">
        <li class="list-group-item">
            {{ task.description }}
        </li>
        <li class="list-group-item">
            {{ task.category }}
        </li>
        <li class="list-group-item">
            {{ task.priority }}
        </li>
        <li class="list-group-item">
            {{ task.createDate | date('Y-m-d | H:i') }}
        </li>
        <li class="list-group-item">
            {{ task.dueDate | date('Y-m-d | H:i') }}
        </li>
    </ul>

{% endblock %}
