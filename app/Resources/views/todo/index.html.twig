{% extends 'base.html.twig' %}

{% block body %}

    <table class="table table-hover">
        <thead>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th></th>
        </thead>
        <tbody>
        {% for task in tasks %}
        <tr>
            <td>{{ task.name }}</td>
            <td>{{ task.description }}</td>
            <td>{{ task.category }}</td>
            <td>
                <a href="{{ path('details_page', {id: task.id}) }}">
                    <button class="btn btn-outline-primary">Details</button>
                </a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
